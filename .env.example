# Environment variables template
# .env dosyası oluşturun ve aşağıdaki değişkenleri ayarlayın

# Django ayarları
SECRET_KEY=your-secret-key-here
DEBUG=False

# Veritabanı ayarları (Mevcut PostgreSQL sunucunuz)
DATABASE_HOST=your-postgres-host
DATABASE_PORT=5432
DATABASE_NAME=akillisehir
DATABASE_USER=your-db-user
DATABASE_PASSWORD=your-db-password

# MinIO ayarları (Mevcut MinIO sunucunuz)
USE_MINIO=True
MINIO_ENDPOINT=your-minio-endpoint:9000
MINIO_ACCESS_KEY=your-minio-access-key
MINIO_SECRET_KEY=your-minio-secret-key
MINIO_BUCKET_NAME=akillisehir
MINIO_USE_HTTPS=False
MINIO_CUSTOM_DOMAIN=your-domain.com
MINIO_STATIC_LOCATION=static
MINIO_MEDIA_LOCATION=media

# Superuser ayarları (opsiyonel - ilk kurulumda)
DJANGO_SUPERUSER_USERNAME=admin
DJANGO_SUPERUSER_EMAIL=admin@sivas.bel.tr
DJANGO_SUPERUSER_PASSWORD=your-admin-password